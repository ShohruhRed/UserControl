@using Microsoft.AspNetCore.Identity
@using UserControl.Data
@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
   
}

<h1>All Users</h1>

<p>Use this page to detail your site's privacy policy.</p>

<br /> <br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Users</h1>
        </div>
        <div class="col text-end pt-1"> 
            <a asp-action="Users" class="btn btn-outline-primary"><i class="bi bi-plus"></i>Activate user</a>
            <a asp-action="Users" class="btn btn-outline-primary"><i class="bi bi-plus"></i>Deactivate user</a>
            <a asp-action="Delete" class="btn btn-outline-primary"><i class="bi bi-plus"></i>Delete user</a>
        </div>       
    </div>
    <table class="table">
        <thead>
            <tr>
                <th><input type="checkbox" id="checkboxAll" /></th>
                <th>
                    Id
                </th>
                <th>
                    First name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Username
                </th>
                <th>
                    Email
                </th>                
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>                     
                    <td><input type="checkbox" class="chkCheckBoxId" value="@user.Id" /></td>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>                    
                </tr>
            }
        </tbody>

    </table>
</div>

@section scripts{
     <script type="text/javascript">
    $(document).ready(function() {
        $('#checkboxAll').click(function() {
            if ($(this).is(":checked"))
                $('.chkCheckBoxId').prop('checked', true);
            else
                $('.chkCheckBoxId').prop('checked', false);
        });
    });
    </script>
}